@keyframes skeleton-animation {
  50% {
    opacity: 0.6;
  }
}

.skeleton {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  animation: skeleton-animation 1.2s ease-in-out infinite;
}

.skeleton-circle {
  background-color: rgba(0, 0, 0, 0.04);
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
}

.skeleton-rect {
  width: 100%;
  height: 98rpx;
  background-color: rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
}

.skeleton-text {
  background-color: rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
  margin-top: 0;
  margin-bottom: 0;
  transform: scale(1, 0.6);
  transform-origin: 0 60%;
  width: 100%;
  height: 48rpx;
}
